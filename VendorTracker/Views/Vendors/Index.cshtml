@using VendorTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors List:</h1>

@if (Model.Count == 0)
{
  <p>No vendors have been added yet</p>
}

@foreach (Vendor vendor in Model)
{
  <ul>
    <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
  </ul>
}

<a href="/vendors/new">Create a new Vendor</a>
<br>
<a href="/">Back to home</a>